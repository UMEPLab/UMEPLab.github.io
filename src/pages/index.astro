---
import Layout from '../layouts/Layout.astro';
import { getCollection } from 'astro:content';

// 获取所有新闻
const allNews = await getCollection('news');

// 按日期排序（最新的在前）
const sortedNews = allNews.sort((a, b) => 
  new Date(b.data.date).getTime() - new Date(a.data.date).getTime()
);

// 获取最新的6篇新闻
const latestNews = sortedNews.slice(0, 6);
---

<Layout title="UMEP Lab - Home">
    <!-- Main Content Container -->
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        
        <!-- Hero Section -->
        <div class="bg-gradient-to-br from-slate-50 via-white to-blue-50 rounded-3xl py-12 lg:py-20 mb-12 lg:mb-16 -mx-4 sm:-mx-6 lg:-mx-8 px-4 sm:px-6 lg:px-8">
            <!-- Hero Section with UMEP Lab Introduction -->
            <section class="mb-8">
                <div class="flex flex-col xl:flex-row items-center xl:items-start gap-8 xl:gap-12">
                    <!-- Left side: Lab Logo -->
                    <div class="w-full max-w-md xl:w-96 xl:h-96 xl:flex-shrink-0">
                        <img 
                            src="banner.png" 
                            alt="UMEP Lab Logo" 
                            class="w-full h-64 xl:h-full object-cover rounded-2xl shadow-2xl hover:shadow-3xl transition-shadow duration-300"
                        />
                    </div>
                    
                    <!-- Right side: Lab Introduction -->
                    <div class="flex-1 relative h-64 xl:h-96 rounded-2xl w-full" 
                         style="background-image: url('/hero.png'); background-size: cover; background-position: center; background-repeat: no-repeat;">
                        <!-- Background overlay -->
                        <div class="absolute inset-0 bg-black/10 rounded-2xl"></div>

                        <div class="relative z-10 h-full">
                            <div class="relative h-64 xl:h-96 bg-black/10 rounded-xl overflow-hidden backdrop-blur-sm">
                                <div class="absolute inset-0 flex items-center justify-center">
                                    <div class="text-center text-white px-4 xl:px-8">
                                        <h1 class="text-3xl xl:text-5xl font-serif font-bold mb-4 xl:mb-6 drop-shadow-lg">UMEP Lab</h1>
                                        <h2 class="text-lg xl:text-2xl mb-6 xl:mb-8 opacity-90 drop-shadow-md">Urban Mobility and Environmental Perception Laboratory</h2>
                                        <p class="text-sm xl:text-lg opacity-85 max-w-lg xl:max-w-2xl mx-auto leading-relaxed drop-shadow-md mb-6 xl:mb-8">
                                            Advancing our understanding of urban mobility, environmental perception, and sustainable urban and rural development through AI-driven modeling, spatial analysis, and human-centered design. The laboratory focuses on AI agents for human mobility, urban science, spatial analytics, built environment perception and cognition, and urban–rural landscape dynamics.
                                        </p>
                                        <a href="/research" class="inline-flex items-center px-6 xl:px-8 py-3 xl:py-4 bg-white/20 hover:bg-white/30 text-white rounded-lg hover:rounded-xl transition-all duration-300 font-semibold text-base xl:text-lg backdrop-blur-sm border border-white/20 hover:border-white/40 shadow-lg hover:shadow-xl transform hover:-translate-y-1">
                                            Explore Our Research
                                            <svg class="w-5 h-5 xl:w-6 xl:h-6 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                                            </svg>
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </section>
        </div>

        <!-- Latest News & Updates -->
        <section class="mb-12 lg:mb-16">
            <div class="text-center mb-8 lg:mb-12">
                <h2 class="text-3xl lg:text-4xl font-serif font-bold text-primary mb-4 lg:mb-6">Latest News & Updates</h2>

            </div>
            
            <!-- News Quick View Grid -->
            <div class={`grid gap-8 ${latestNews.length === 1 ? 'max-w-md mx-auto' : latestNews.length === 2 ? 'grid-cols-1 md:grid-cols-2 max-w-4xl mx-auto' : 'md:grid-cols-2 lg:grid-cols-3'}`}>
                {latestNews.map((news, index) => (
                    <article class="bg-white rounded-xl shadow-sm border border-gray-200 overflow-hidden hover:shadow-lg transition-all duration-300 group">
                        {news.data.image && (
                            <div class="aspect-video overflow-hidden">
                                <img 
                                    src={news.data.image} 
                                    alt={news.data.title}
                                    class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-300"
                                />
                            </div>
                        )}
                        
                        <div class="p-6">
                            <div class="flex items-center gap-3 mb-4">
                                <span class="inline-block px-3 py-1 text-xs font-medium bg-primary/10 text-primary rounded-full">
                                    {news.data.category}
                                </span>
                                <time class="text-sm text-gray-500">
                                    {new Date(news.data.date).toLocaleDateString('en-US', {
                                        year: 'numeric',
                                        month: 'short',
                                        day: 'numeric'
                                    })}
                                </time>
                            </div>
                            
                            <h3 class="text-xl font-serif font-bold mb-3 text-gray-900 group-hover:text-primary transition-colors">
                                {news.data.title}
                            </h3>
                            
                            <p class="text-gray-700 mb-3 line-clamp-6">
                                {news.data.summary}
                            </p>
                            <!-- 首页仅展示内容，不显示“Read more”链接 -->
                        </div>
                    </article>
                ))}
            </div>
            
            <!-- View All News Archive Link -->
            <div class="text-center mt-8">
                <p class="text-gray-500 mb-4">
                    All news updates are displayed here as quick reports
                </p>
            </div>
        </section>

        <!-- Call to Action -->
        <section class="mb-12 lg:mb-16">
            <div class="bg-gradient-to-br from-gray-50 via-white to-blue-50 rounded-2xl lg:rounded-3xl p-8 lg:p-16 text-center border border-gray-100 shadow-xl">
                <h2 class="text-2xl lg:text-3xl xl:text-4xl font-serif font-bold text-primary mb-4 lg:mb-6"> Get to Know Us</h2>
                <div class="flex flex-row gap-4 lg:gap-6 justify-center max-w-2xl mx-auto">
                    <a 
                        href="/people" 
                        class="flex-1 inline-flex items-center justify-center px-6 lg:px-8 py-3 lg:py-4 border-2 border-primary text-primary rounded-xl hover:bg-primary hover:text-white transition-all duration-300 font-semibold text-base lg:text-lg shadow-lg hover:shadow-xl transform hover:-translate-y-1"
                    >
                        Meet Our Lab Members
                        <svg class="w-5 h-5 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197m13.5-9a2.5 2.5 0 11-5 0 2.5 2.5 0 015 0z"></path>
                        </svg>
                    </a>
                    <a 
                        href="/openings" 
                        class="flex-1 inline-flex items-center justify-center px-6 lg:px-8 py-3 lg:py-4 bg-primary text-white rounded-xl hover:bg-blue-800 transition-all duration-300 font-semibold text-base lg:text-lg shadow-lg hover:shadow-xl transform hover:-translate-y-1"
                    >
                        View Open Positions
                        <svg class="w-5 h-5 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 13.255A23.931 23.931 0 0112 15c-3.183 0-6.22-.62-9-1.745M16 6V4a2 2 0 00-2-2h-4a2 2 0 00-2-2v2m8 0V6a2 2 0 012 2v6M8 6a2 2 0 012-2h4a2 2 0 012 2v6a2 2 0 01-2 2H10a2 2 0 01-2-2V6z"></path>
                        </svg>
                    </a>

                </div>
            </div>
        </section>
    </div>
</Layout>

<style>
    .line-clamp-2 {
        display: -webkit-box;
        -webkit-line-clamp: 2;
        -webkit-box-orient: vertical;
        overflow: hidden;
    }
    
    .line-clamp-3 {
        display: -webkit-box;
        -webkit-line-clamp: 3;
        -webkit-box-orient: vertical;
        overflow: hidden;
    }
    
    .line-clamp-6 {
        display: -webkit-box;
        -webkit-line-clamp: 6;
        -webkit-box-orient: vertical;
        overflow: hidden;
    }
    
    /* Enhanced shadow utilities */
    .shadow-3xl {
        box-shadow: 0 35px 60px -12px rgba(0, 0, 0, 0.25);
    }
    
    /* Hero section background animations */
    @keyframes float {
        0%, 100% {
            transform: translateY(0px) rotate(0deg);
            opacity: 0.1;
        }
        50% {
            transform: translateY(-10px) rotate(180deg);
            opacity: 0.2;
        }
    }
    
    @keyframes pulse-slow {
        0%, 100% {
            opacity: 0.05;
            transform: scale(1);
        }
        50% {
            opacity: 0.15;
            transform: scale(1.1);
        }
    }
    
    /* Hero区域的额外视觉效果 */
    .hero-pattern::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background-image: 
            radial-gradient(circle at 20% 80%, rgba(255,255,255,0.05) 2px, transparent 2px),
            radial-gradient(circle at 80% 20%, rgba(255,255,255,0.05) 2px, transparent 2px),
            radial-gradient(circle at 40% 40%, rgba(255,255,255,0.03) 2px, transparent 2px);
        background-size: 50px 50px, 60px 60px, 40px 40px;
        animation: float 20s ease-in-out infinite;
    }
    
    /* Smooth transitions for interactive elements */
    .transform {
        transition: transform 0.3s ease-in-out;
    }
    
    /* Enhanced button hover effects */
    .hover\:-translate-y-1:hover {
        transform: translateY(-0.25rem);
    }
</style>

<script>
    // Simple page interactions
    document.addEventListener('DOMContentLoaded', function() {
        console.log('UMEP Lab homepage loaded');
    });
</script>
