---

<Layout title="Team Members">
    <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
        <h1 class="text-4xl font-serif font-bold text-center mb-4 text-primary">Our Team</h1>
        <p class="text-center text-gray-600 mb-12">Researchers working together in our lab.</p>

        <!-- Lab Director -->
        <section class="mb-12">
            <h2 class="text-2xl font-serif font-bold mb-6 text-primary border-b-2 border-primary/20 pb-2">Lab Director</h2>
            <div class="space-y-6">
                {teamMembers.director.map(member => (
                    <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6">
                        <div class="flex items-start">
                            <div class="w-12 h-12 bg-primary/10 rounded-full flex items-center justify-center mr-4 flex-shrink-0">
                                <svg class="w-6 h-6 text-primary" fill="currentColor" viewBox="0 0 20 20">
                                    <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"/>
                                </svg>
                            </div>
                            <div class="flex-grow">
                                <h3 class="text-xl font-serif font-bold text-gray-900 mb-1">{member.name}</h3>
                                <p class="text-primary font-medium mb-2">{member.title}</p>
                                <p class="text-gray-600 mb-3 leading-relaxed">{member.researchInterest}</p>
                                <a href={`mailto:${member.email}`} class="text-sm text-primary hover:text-blue-800 transition-colors">
                                    {member.email}
                                </a>
                            </div>
                        </div>
                    </div>
                ))}
            </div>
        </section>

        <!-- PhD Students -->
        <section class="mb-12">
            <h2 class="text-2xl font-serif font-bold mb-6 text-primary border-b-2 border-primary/20 pb-2">PhD Students</h2>
            <div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
                {teamMembers.phdStudents.map(member => (
                    <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6">
                        <div class="flex items-start">
                            <div class="w-10 h-10 bg-blue-100 rounded-full flex items-center justify-center mr-4 flex-shrink-0">
                                <svg class="w-5 h-5 text-blue-600" fill="currentColor" viewBox="0 0 20 20">
                                    <path d="M10.394 2.08a1 1 0 00-.788 0l-7 3a1 1 0 000 1.84L5.25 8.051a.999.999 0 01.356-.257l4-1.714a1 1 0 11.788 1.838L7.667 9.088l1.94.831a1 1 0 00.787 0l7-3a1 1 0 000-1.838l-7-3zM3.31 9.397L5 10.12v4.102a8.969 8.969 0 00-1.05-.174 1 1 0 01-.89-.89 11.115 11.115 0 01.25-3.762zM9.3 16.573A9.026 9.026 0 007 14.935v-3.957l1.818.78a3 3 0 002.364 0l5.508-2.361a11.026 11.026 0 01.25 3.762 1 1 0 01-.89.89 8.968 8.968 0 00-5.75.524zM6 18a1 1 0 001-1v-2.065a8.935 8.935 0 00-2-.712V17a1 1 0 001 1z"/>
                                </svg>
                            </div>
                            <div class="flex-grow">
                                <h3 class="text-lg font-serif font-bold text-gray-900 mb-1">{member.name}</h3>
                                <p class="text-blue-600 font-medium mb-2 text-sm">{member.title}</p>
                                <p class="text-gray-600 mb-3 leading-relaxed text-sm">{member.researchInterest}</p>
                                <a href={`mailto:${member.email}`} class="text-xs text-primary hover:text-blue-800 transition-colors">
                                    {member.email}
                                </a>
                            </div>
                        </div>
                    </div>
                ))}
            </div>
        </section>

        <!-- MPhil Students -->
        <section class="mb-12">
            <h2 class="text-2xl font-serif font-bold mb-6 text-primary border-b-2 border-primary/20 pb-2">MPhil Students</h2>
            <div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
                {teamMembers.mphilStudents.map(member => (
                    <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6">
                        <div class="flex items-start">
                            <div class="w-10 h-10 bg-green-100 rounded-full flex items-center justify-center mr-4 flex-shrink-0">
                                <svg class="w-5 h-5 text-green-600" fill="currentColor" viewBox="0 0 20 20">
                                    <path d="M11 3a1 1 0 10-2 0v1a1 1 0 102 0V3zM15.657 6.343a1 1 0 00-1.414-1.414l-.707.707a1 1 0 001.414 1.414l.707-.707zM18 10a1 1 0 01-1 1h-1a1 1 0 110-2h1a1 1 0 011 1zM5.05 6.464A1 1 0 106.464 5.05l-.707-.707a1 1 0 00-1.414 1.414l.707.707zM5 10a1 1 0 01-1 1H3a1 1 0 110-2h1a1 1 0 011 1zM8 16v-1h4v1a2 2 0 11-4 0zM12 14c.015-.34.208-.646.477-.859a4 4 0 10-4.954 0c.27.213.462.519.477.859h4z"/>
                                </svg>
                            </div>
                            <div class="flex-grow">
                                <h3 class="text-lg font-serif font-bold text-gray-900 mb-1">{member.name}</h3>
                                <p class="text-green-600 font-medium mb-2 text-sm">{member.title}</p>
                                <p class="text-gray-600 mb-3 leading-relaxed text-sm">{member.researchInterest}</p>
                                <a href={`mailto:${member.email}`} class="text-xs text-primary hover:text-blue-800 transition-colors">
                                    {member.email}
                                </a>
                            </div>
                        </div>
                    </div>
                ))}
            </div>
        </section>
    </div>
</Layout>