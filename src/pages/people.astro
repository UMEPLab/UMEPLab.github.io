    {
      name: "Dr. Qiumeng Li",
      title: "Lab Director & Professor",
      email: "qiumengli@hkust-gz.edu.cn",
      researchInterest: "Research Interests: Built Environment Cognition for Mobility, AI Agent for Behavioural Geography"
    }
  ],
  phdStudents: [
    {
      name: "Chunhou Ji",
      title: "PhD Student",
      email: "michael.zhang@student.umep.edu",
      researchInterest: "Research Interests: LLM-driven Agent-based Mobility"
    },
    {
      name: "Xinyue Liu",
      title: "PhD Student", 
      email: "xliu386@connect.hkust-gz.edu.cn",
      researchInterest: "Research Interests: LLM Agents, Environment Perception"
    },
    {
      name: "Xiao Yang",
      title: "PhD Student", 
      email: "xyang608@connect.hkust-gz.edu.cn",
      researchInterest: "Research Interests: Urban Neuroscience"
    }

  ],
  mphilStudents: [
    {
      name: "Houjie Chen",
      title: "MPhil Student",
      email: "hchen060@connect.hkust-gz.edu.cn", 
      researchInterest: "Research Interests: Urban Resilience"
    },
    {
      name: "Xinxi Yang",
      title: "MPhil Student",
      email: "xyang593@connect.hkust-gz.edu.cn",
      researchInterest: "Research Interests: Travel Behavior, Transportation Agent"
    },
    {
      name: "Xinrui Zhu",
      title: "MPhil Student",
      email: "xzhu765@connect.hkust-gz.edu.cn",
      researchInterest: "Research Interests: Urban Cognition and Mobility, Virtual City LLM Agents"
    }
  ]
