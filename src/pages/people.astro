---
import Layout from '../layouts/Layout.astro';

// 手动定义团队成员数据，按分类组织
const teamMembers = {
  director: [
    {
      name: "Dr. Qiumeng Li",
      title: "Lab Director & Professor",
      email: "qiumengli@hkust-gz.edu.cn",
      researchInterest: "Built Environment Cognition for Mobility, AI Agent for Behavioural Geography"
    }
  ],
  phdStudents: [
    {
      name: "Chunhou Ji",
      title: "PhD Student",
      email: "michael.zhang@student.umep.edu",
      researchInterest: "LLM-driven agent-based mobility"
    },
    {
      name: "Xinyue Liu",
      title: "PhD Student", 
      email: "emily.rodriguez@student.umep.edu",
      researchInterest: "Urban environment perception modeling using computer vision and remote sensing data."
    },
    {
      name: "Xiao Yang",
      title: "PhD Student", 
      email: "xyang608@connect.hkust-gz.edu.cn",
      researchInterest: "Urban Neuroscience"
    }

  ],
  mphilStudents: [
    {
      name: "Houjie Chen",
      title: "MPhil Student",
      email: "hchen060@connect.hkust-gz.edu.cn", 
      researchInterest: "Urban Resilience"
    },
    {
      name: "Xinxi Yang",
      title: "MPhil Student",
      email: "xyang593@connect.hkust-gz.edu.cn",
      researchInterest: "Travel Behavior, Transportation Agent"
    },
    {
      name: "Xinrui Zhu",
      title: "MPhil Student",
      email: "xzhu765@connect.hkust-gz.edu.cn",
      researchInterest: "Urban Cognition and Mobility, Virtual City LLM Agents"
    }
  ]
}
---

<Layout title="Team Members">
    <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
        <h1 class="text-4xl font-serif font-bold text-center mb-4 text-primary">Our Team</h1>
        <p class="text-center text-gray-600 mb-12">Researchers working together in our lab.</p>

        <!-- Lab Director -->
        <section class="mb-12">
            <h2 class="text-2xl font-serif font-bold mb-6 text-primary border-b-2 border-primary/20 pb-2">Lab Director</h2>
            <div class="space-y-6">
                {teamMembers.director.map(member => (
                    <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6">
                        <div class="flex items-start">
                            <div class="w-12 h-12 bg-primary/10 rounded-full flex items-center justify-center mr-4 flex-shrink-0">
                                <svg class="w-6 h-6 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
                                </svg>
                            </div>
                            <div class="flex-grow">
                                <h3 class="text-xl font-serif font-bold text-gray-900 mb-1">{member.name}</h3>
                                <p class="text-primary font-medium mb-2">{member.title}</p>
                                <p class="text-gray-600 mb-3 leading-relaxed">{member.researchInterest}</p>
                                <a href={`mailto:${member.email}`} class="text-sm text-primary hover:text-blue-800 transition-colors">
                                    {member.email}
                                </a>
                            </div>
                        </div>
                    </div>
                ))}
            </div>
        </section>

        <!-- PhD Students -->
        <section class="mb-12">
            <h2 class="text-2xl font-serif font-bold mb-6 text-primary border-b-2 border-primary/20 pb-2">PhD Students</h2>
            <div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
                {teamMembers.phdStudents.map(member => (
                    <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6">
                        <div class="flex items-start">
                            <div class="w-10 h-10 bg-blue-100 rounded-full flex items-center justify-center mr-4 flex-shrink-0">
                                <svg class="w-5 h-5 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"></path>
                                </svg>
                            </div>
                            <div class="flex-grow">
                                <h3 class="text-lg font-serif font-bold text-gray-900 mb-1">{member.name}</h3>
                                <p class="text-blue-600 font-medium mb-2 text-sm">{member.title}</p>
                                <p class="text-gray-600 mb-3 leading-relaxed text-sm">{member.researchInterest}</p>
                                <a href={`mailto:${member.email}`} class="text-xs text-primary hover:text-blue-800 transition-colors">
                                    {member.email}
                                </a>
                            </div>
                        </div>
                    </div>
                ))}
            </div>
        </section>

        <!-- MPhil Students -->
        <section class="mb-12">
            <h2 class="text-2xl font-serif font-bold mb-6 text-primary border-b-2 border-primary/20 pb-2">MPhil Students</h2>
            <div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
                {teamMembers.mphilStudents.map(member => (
                    <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6">
                        <div class="flex items-start">
                            <div class="w-10 h-10 bg-green-100 rounded-full flex items-center justify-center mr-4 flex-shrink-0">
                                <svg class="w-5 h-5 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
                                </svg>
                            </div>
                            <div class="flex-grow">
                                <h3 class="text-lg font-serif font-bold text-gray-900 mb-1">{member.name}</h3>
                                <p class="text-green-600 font-medium mb-2 text-sm">{member.title}</p>
                                <p class="text-gray-600 mb-3 leading-relaxed text-sm">{member.researchInterest}</p>
                                <a href={`mailto:${member.email}`} class="text-xs text-primary hover:text-blue-800 transition-colors">
                                    {member.email}
                                </a>
                            </div>
                        </div>
                    </div>
                ))}
            </div>
        </section>
    </div>
</Layout>