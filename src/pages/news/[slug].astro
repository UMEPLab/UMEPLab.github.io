---
import { getCollection } from 'astro:content';
import Layout from '../../layouts/Layout.astro';

export async function getStaticPaths() {
  const newsEntries = await getCollection('news');
  return newsEntries.map(entry => ({
    params: { slug: entry.slug },
    props: { entry },
  }));
}

const { entry } = Astro.props;
const { Content } = await entry.render();
---

<Layout title={entry.data.title}>
  <main class="container mx-auto px-4 py-8">
    <article class="max-w-4xl mx-auto">
      <header class="mb-8">
        <h1 class="text-4xl font-bold text-gray-900 mb-4">{entry.data.title}</h1>
        <div class="flex items-center text-gray-600 mb-4">
          <time datetime={entry.data.date.toISOString()}>
            {entry.data.date.toLocaleDateString('en-US', {
              year: 'numeric',
              month: 'long',
              day: 'numeric'
            })}
          </time>
          {entry.data.category && (
            <span class="ml-4 px-3 py-1 bg-blue-100 text-blue-800 rounded-full text-sm">
              {entry.data.category}
            </span>
          )}
        </div>
        {entry.data.summary && (
          <p class="text-xl text-gray-700 leading-relaxed">{entry.data.summary}</p>
        )}
      </header>
      
      {entry.data.image && (
        <div class="mb-8">
          <img 
            src={`/${entry.data.image}`} 
            alt={entry.data.title}
            class="w-full h-auto rounded-lg shadow-lg"
          />
        </div>
      )}
      
      <div class="prose prose-lg max-w-none">
        <Content />
      </div>
    </article>
  </main>
</Layout>
