---
import Layout from '../layouts/Layout.astro';
import { getCollection } from 'astro:content';

// 获取所有新闻
const allNews = await getCollection('news');

// 按日期排序（最新的在前）
const sortedNews = allNews.sort((a, b) => 
  new Date(b.data.date).getTime() - new Date(a.data.date).getTime()
);

// 分类新闻
const recentNews = sortedNews.slice(0, 6);
const archivedNews = sortedNews.slice(6);

// 统计信息
const totalNews = allNews.length;
const thisYearNews = allNews.filter(news => 
  new Date(news.data.date).getFullYear() === new Date().getFullYear()
).length;
const categories = [...new Set(allNews.map(news => news.data.category))];
---

<Layout title="News - UMEP Lab">
    <div class="max-w-6xl mx-auto">
        <!-- Page Header -->
        <section class="text-center mb-12">
            <h1 class="text-4xl font-serif font-bold mb-4 text-primary">Latest News</h1>
            <p class="text-xl text-gray-600 max-w-4xl mx-auto leading-relaxed mb-8">
                Stay updated with the latest developments, achievements, and activities from our research lab.
            </p>
            
            <!-- Statistics -->
            <div class="grid grid-cols-2 md:grid-cols-3 gap-6 max-w-xl mx-auto">
                <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-4">
                    <div class="text-2xl font-bold text-primary">{totalNews}</div>
                    <div class="text-sm text-gray-600">Total News</div>
                </div>
                <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-4">
                    <div class="text-2xl font-bold text-primary">{thisYearNews}</div>
                    <div class="text-sm text-gray-600">This Year</div>
                </div>
                <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-4">
                    <div class="text-2xl font-bold text-primary">{categories.length}</div>
                    <div class="text-sm text-gray-600">Categories</div>
                </div>
            </div>
        </section>

        <!-- Filter Options -->
        <section class="mb-8">
            <div class="flex flex-wrap gap-4 justify-center">
                <button class="filter-btn active" data-filter="all">
                    All News
                </button>
                <button class="filter-btn" data-filter="award">
                    Awards
                </button>
                <button class="filter-btn" data-filter="research">
                    Research
                </button>
                <button class="filter-btn" data-filter="collaboration">
                    Collaborations
                </button>
                <button class="filter-btn" data-filter="event">
                    Events
                </button>
            </div>
        </section>

        <!-- Recent News -->
        <section class="mb-16">
            <div class="flex items-center mb-8">
                <h2 class="text-3xl font-serif font-semibold text-primary mr-4">Recent Updates</h2>
                <div class="flex-1 h-px bg-gradient-to-r from-primary to-transparent"></div>
            </div>
            
            <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
                {recentNews.map(news => (
                    <article class="news-item bg-white rounded-lg shadow-sm border border-gray-200 overflow-hidden hover:shadow-md transition-shadow" data-category={news.data.category}>
                        {news.data.image && (
                            <div class="aspect-video overflow-hidden">
                                <img 
                                    src={news.data.image} 
                                    alt={news.data.title}
                                    class="w-full h-full object-cover hover:scale-105 transition-transform duration-300"
                                />
                            </div>
                        )}
                        
                        <div class="p-6">
                            <div class="flex items-center gap-3 mb-3">
                                <span class="inline-block px-3 py-1 text-xs font-medium bg-primary/10 text-primary rounded-full">
                                    {news.data.category}
                                </span>
                                <time class="text-sm text-gray-500">
                                    {new Date(news.data.date).toLocaleDateString('en-US', {
                                        year: 'numeric',
                                        month: 'long',
                                        day: 'numeric'
                                    })}
                                </time>
                            </div>
                            
                            <h3 class="text-xl font-semibold mb-3 text-gray-900 hover:text-primary transition-colors">
                                <a href={`/news/${news.slug}`} class="hover:underline">
                                    {news.data.title}
                                </a>
                            </h3>
                            
                            <p class="text-gray-600 mb-4 line-clamp-3">
                                {news.data.excerpt}
                            </p>
                            
                            <div class="flex items-center justify-between">
                                <a 
                                    href={`/news/${news.slug}`}
                                    class="text-primary hover:text-blue-800 font-medium text-sm flex items-center gap-1 transition-colors"
                                >
                                    Read More
                                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                                    </svg>
                                </a>
                                
                                {news.data.author && (
                                    <span class="text-sm text-gray-500">
                                        by {news.data.author}
                                    </span>
                                )}
                            </div>
                        </div>
                    </article>
                ))}
            </div>
        </section>

        <!-- News Archive -->
        {archivedNews.length > 0 && (
            <section>
                <div class="flex items-center mb-8">
                    <h2 class="text-3xl font-serif font-semibold text-primary mr-4">News Archive</h2>
                    <div class="flex-1 h-px bg-gradient-to-r from-primary to-transparent"></div>
                </div>
                
                <div class="space-y-6">
                    {archivedNews.map(news => (
                        <article class="news-item bg-white rounded-lg shadow-sm border border-gray-200 p-6 hover:shadow-md transition-shadow" data-category={news.data.category}>
                            <div class="flex flex-col md:flex-row gap-6">
                                {news.data.image && (
                                    <div class="md:w-48 flex-shrink-0">
                                        <img 
                                            src={news.data.image} 
                                            alt={news.data.title}
                                            class="w-full h-32 md:h-24 object-cover rounded-lg"
                                        />
                                    </div>
                                )}
                                
                                <div class="flex-1">
                                    <div class="flex items-center gap-3 mb-2">
                                        <span class="inline-block px-3 py-1 text-xs font-medium bg-primary/10 text-primary rounded-full">
                                            {news.data.category}
                                        </span>
                                        <time class="text-sm text-gray-500">
                                            {new Date(news.data.date).toLocaleDateString('en-US', {
                                                year: 'numeric',
                                                month: 'long',
                                                day: 'numeric'
                                            })}
                                        </time>
                                    </div>
                                    
                                    <h3 class="text-xl font-semibold mb-2 text-gray-900 hover:text-primary transition-colors">
                                        <a href={`/news/${news.slug}`} class="hover:underline">
                                            {news.data.title}
                                        </a>
                                    </h3>
                                    
                                    <p class="text-gray-600 mb-3">
                                        {news.data.excerpt}
                                    </p>
                                    
                                    <div class="flex items-center justify-between">
                                        <a 
                                            href={`/news/${news.slug}`}
                                            class="text-primary hover:text-blue-800 font-medium text-sm flex items-center gap-1 transition-colors"
                                        >
                                            Read More
                                            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                                            </svg>
                                        </a>
                                        
                                        {news.data.author && (
                                            <span class="text-sm text-gray-500">
                                                by {news.data.author}
                                            </span>
                                        )}
                                    </div>
                                </div>
                            </div>
                        </article>
                    ))}
                </div>
            </section>
        )}

        <!-- Empty State -->
        <div id="no-results" class="hidden text-center py-12">
            <div class="text-gray-400 mb-4">
                <svg class="w-16 h-16 mx-auto" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 20H5a2 2 0 01-2-2V6a2 2 0 012-2h10a2 2 0 012 2v1m2 13a2 2 0 01-2-2V7m2 13a2 2 0 002-2V9a2 2 0 00-2-2h-2m-4-3H9M7 16h6M7 8h6v4H7V8z"></path>
                </svg>
            </div>
            <h3 class="text-xl font-semibold text-gray-600 mb-2">No news found</h3>
            <p class="text-gray-500">Try selecting a different category or check back later.</p>
        </div>
    </div>
</Layout>

<style>
    .filter-btn {
        @apply px-4 py-2 rounded-lg border border-gray-300 text-gray-700 hover:bg-gray-50 transition-colors font-medium;
    }
    
    .filter-btn.active {
        @apply bg-primary text-white border-primary hover:bg-blue-800;
    }
    
    .line-clamp-3 {
        display: -webkit-box;
        -webkit-line-clamp: 3;
        -webkit-box-orient: vertical;
        overflow: hidden;
    }
</style>

<script>
    // Filter functionality
    document.addEventListener('DOMContentLoaded', function() {
        const filterButtons = document.querySelectorAll('.filter-btn');
        const newsItems = document.querySelectorAll('.news-item');
        const noResults = document.getElementById('no-results');
        
        filterButtons.forEach(button => {
            button.addEventListener('click', function(this: HTMLButtonElement) {
                const filter = this.getAttribute('data-filter');
                
                // Update active button
                filterButtons.forEach(btn => btn.classList.remove('active'));
                this.classList.add('active');
                
                // Filter news items
                let visibleCount = 0;
                
                newsItems.forEach(item => {
                    const category = item.getAttribute('data-category');
                    const htmlItem = item as HTMLElement;
                    if (filter === 'all' || category === filter) {
                        htmlItem.style.display = 'block';
                        visibleCount++;
                    } else {
                        htmlItem.style.display = 'none';
                    }
                });
                
                // Show/hide no results message
                if (visibleCount === 0) {
                    noResults?.classList.remove('hidden');
                } else {
                    noResults?.classList.add('hidden');
                }
            });
        });
    });
</script>